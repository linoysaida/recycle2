<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn"
    tools:ignore="ExtraText"
    android:background="#D5FFAB">


    <ImageView
        android:id="@+id/LOGO"
        android:layout_width="391dp"
        android:layout_height="172dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/logo"
        android:text="EcoCode"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"


        tools:ignore="HardcodedText,TextSizeCheck" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LOGO"
        android:layout_marginStart="10dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_border"
        android:drawablePadding="20dp"
        android:hint="@string/username"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#090909"
        android:textColorHint="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginStart="10dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:background="@drawable/text_border"
        android:drawablePadding="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        tools:ignore="HardcodedText,VisualLintTextFieldSize" />

    <CheckBox
        android:id="@+id/showPasswordCheckbox"
        android:layout_width="393dp"
        android:layout_height="63dp"
        android:layout_below="@id/password"
        android:layout_marginTop="-17dp"
        android:text="Show Password"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/forgetpass"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_below="@id/showPasswordCheckbox"
        android:layout_marginTop="62dp"
        android:clickable="true"
        android:focusable="true"
        android:text="forgot password?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="HardcodedText,TextSizeCheck,TextContrastCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginbtn"
        android:layout_width="371dp"
        android:layout_height="58dp"
        android:layout_below="@id/forgetpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-127dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/black"
        android:text="Log in"
        android:textSize="18sp"
        app:cornerRadius="4dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_below="@id/loginbtn"
        android:layout_marginTop="62dp"
        android:clickable="true"
        android:focusable="true"
        android:text="SignUp"
        android:textAlignment="center"
        android:textColor="#1155CC"
        android:textSize="16sp"
        tools:ignore="HardcodedText,TextSizeCheck,TextContrastCheck" />


</RelativeLayout>